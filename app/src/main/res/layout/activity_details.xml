<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".View.MovieDetailsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/image_view"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/image_view">
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">
                <TextView
                    android:id="@+id/status_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/status_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arimo"
                    android:paddingStart="@dimen/general_padding"
                    android:text="what is this" />
            </TableRow>
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">
                <TextView
                    android:id="@+id/runtime_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Runtime:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/runtime_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/general_padding"
                    android:fontFamily="@font/arimo"
                    android:text="127" />
            </TableRow>
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">
                <TextView
                    android:id="@+id/budget_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Budget:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/budget_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arimo"
                    android:paddingStart="@dimen/general_padding"
                    android:text="$70000" />
            </TableRow>
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">
                <TextView
                    android:id="@+id/revenue_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Revenue:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/revenue_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/general_padding"
                    android:fontFamily="@font/arimo"
                    android:text="$85210" />
            </TableRow>
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/overview_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Overview:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arimo"
                    android:paddingStart="@dimen/general_padding"
                    android:layout_marginEnd="8dip"
                    android:text="@string/sample" />
            </TableRow>
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">
                <TextView
                    android:id="@+id/rating_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Rating:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rating_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/general_padding"
                    android:fontFamily="@font/arimo"
                    android:text="7/10" />
            </TableRow>
            <TableRow
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">
                <TextView
                    android:id="@+id/total_review_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="TotalVote:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_review_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/general_padding"
                    android:fontFamily="@font/arimo"
                    android:text="1500" />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/movie_cast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cast"
            android:layout_below="@id/table"
            android:fontFamily="@font/adamina"
            android:paddingStart="@dimen/general_padding"
            android:paddingTop="@dimen/general_padding"
            android:paddingBottom="@dimen/general_padding"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/movie_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_cast_title"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>