<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nestedview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:layoutAnimation="@anim/layout_bottom_to_top_animation">

    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/upcoming_bg"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_below="@id/live_movie_bg"
            android:background="@drawable/upcoming_gredient"
            android:layout_marginTop="-14dp"/>
        
        <View
            android:id="@+id/live_movie_bg"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/live_movie_bg"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/live_recycle"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:reverseLayout="false">

        </android.support.v7.widget.RecyclerView>
        
        <View
            android:id="@+id/mostrated_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/upcoming_bg"
            android:background="@drawable/mostrated_gredient"/>
        <View
            android:id="@+id/livetv_bg"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/mostrated_bg"
            android:background="@drawable/upcoming_gredient"/>

        <TextView
            android:id="@+id/upcoming_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/live_movie_bg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/upcoming"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="italic" />
        <View
            android:id="@+id/upcoming_cardview_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/upcoming_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/upcoming_cardview_bg"/>
        <android.support.v7.widget.CardView
            android:id="@+id/upcoming_cardview_1"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_alignParentStart="true"
            android:layout_below="@id/upcoming_text"
            android:layout_marginTop="22dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/upcoming_poster_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/poster"
                android:contentDescription="@string/image_des"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/upcoming_cardview_2"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/upcoming_text"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/upcoming_poster_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/poster"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_des"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/mostrated_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upcoming_bg"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:text="@string/most_rated"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"/>
        <View
            android:id="@+id/mostrated_cardview_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/mostrated_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/upcoming_cardview_bg"/>
        <android.support.v7.widget.CardView
            android:id="@+id/mostrated_cardview_1"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_alignParentStart="true"
            android:layout_below="@id/mostrated_text"
            android:layout_marginTop="22dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/mostrated_poster_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/poster"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_des"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/mostrated_cardview_2"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/mostrated_text"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/mostrated_poster_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/poster"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_des"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/livetv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mostrated_bg"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:text="@string/airing_today"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"/>
        <View
            android:id="@+id/livetv_cardview_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/livetv_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/upcoming_cardview_bg"/>
        <android.support.v7.widget.CardView
            android:id="@+id/livetv_cardview_1"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_alignParentStart="true"
            android:layout_below="@id/livetv_text"
            android:layout_marginTop="22dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/livetv_poster_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/poster"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_des"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/livetv_cardview_2"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="@dimen/cardview_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/livetv_text"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/livetv_poster_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/poster"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_des"/>

        </android.support.v7.widget.CardView>



    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>